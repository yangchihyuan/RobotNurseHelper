<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.example.painrating"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.PainRating">

        <!-- MainActivity: 首頁 (兩個圖片按鈕) -->
        <activity android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- PainActivity: 使用一整張量表圖 + 座標判斷 -->
        <activity android:name=".PainActivity" />

        <!-- VideoActivity: 撥放影片，結束自動回首頁 -->
        <activity android:name=".VideoActivity" />
        <activity android:name=".FaceResultActivity" />
        <activity android:name=".NetworkSettingActivity" />

    </application>

</manifest>
