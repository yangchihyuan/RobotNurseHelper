<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText_Port"
        android:layout_width="145dp"
        android:layout_height="47dp"
        android:layout_alignTop="@+id/editText_Server"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@+id/editText_Server"
        android:ems="10"
        android:inputType="number"
        android:selectAllOnFocus="false"
        android:text="8898"
        tools:layout_editor_absoluteX="901dp"
        tools:layout_editor_absoluteY="378dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Server_and_port"
        tools:layout_editor_absoluteX="676dp"
        tools:layout_editor_absoluteY="359dp" />

    <CheckBox
        android:id="@+id/checkBox_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/editText_Server"
        android:layout_alignParentTop="true"
        android:focusable="true"
        android:text="EnableConnection"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="676dp"
        tools:layout_editor_absoluteY="226dp" />

    <EditText
        android:id="@+id/editText_Server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="text"
        android:selectAllOnFocus="false"
        android:text="192.168.0.8"
        tools:layout_editor_absoluteX="676dp"
        tools:layout_editor_absoluteY="378dp" />
</androidx.constraintlayout.widget.ConstraintLayout>